<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/primaryColor"

        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/itemImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.45"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/black"
        android:src="@mipmap/ic_launcher_round"
         />
    <TextView
        android:id="@+id/itemNameTitle"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/itemImageView"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Name:"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textAppearance="@color/design_default_color_primary"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/itemName"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.75"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="3dp"
        app:layout_constraintTop_toBottomOf="@+id/itemImageView"
        app:layout_constraintStart_toEndOf="@+id/itemNameTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        android:textStyle="normal"
        android:textColor="@color/secondaryColor"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/itemIDTitle"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.15"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/itemNameTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:text="ID:"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textAppearance="@color/design_default_color_primary"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/itemID"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.85"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/itemName"
        app:layout_constraintStart_toEndOf="@+id/itemIDTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        android:textStyle="normal"
        android:textColor="@color/secondaryColor"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/itemScoreTitle"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/itemIDTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Score:"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textAppearance="@color/design_default_color_primary"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/itemScore"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.75"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="7dp"
        app:layout_constraintTop_toBottomOf="@+id/itemID"
        app:layout_constraintStart_toEndOf="@+id/itemScoreTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        android:textStyle="normal"
        android:textColor="@color/secondaryColor"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/itemHtmlUrlTitle"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.20"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/itemScoreTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:text="URL:"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textAppearance="@color/design_default_color_primary"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/itemHtmlUrl"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.80"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/itemScore"
        app:layout_constraintStart_toEndOf="@+id/itemHtmlUrlTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        android:textStyle="normal"
        android:gravity="center_vertical"
        android:autoLink="web"
        android:textColorLink="@color/secondaryColor"
        />
    <TextView
        android:id="@+id/repoOwner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/itemHtmlUrl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textColorLink="@color/secondaryColor"
        />

</androidx.constraintlayout.widget.ConstraintLayout>