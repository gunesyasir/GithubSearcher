<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:singleLine="true"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/primaryColor"

        />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/itemImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginHorizontal="80dp"
        android:paddingHorizontal="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:scaleType="fitXY"
        android:backgroundTint="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@mipmap/ic_launcher_round"
        app:shapeAppearanceOverlay="@style/Theme.GithubSearcher"
         />
    <TextView
        android:id="@+id/itemNameTitle"
        android:layout_width="0dp"
        android:text="@string/name"
        app:layout_constraintWidth_percent="0.2"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/itemImageView"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAppearance="@color/design_default_color_primary"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/itemName"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.8"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/itemImageView"
        app:layout_constraintStart_toEndOf="@+id/itemNameTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="1"
        android:textSize="23sp"
        android:textStyle="normal"
        android:textColor="@color/secondaryColor"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/itemIDTitle"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.15"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/itemNameTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/id"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAppearance="@color/design_default_color_primary"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/itemID"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.85"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/itemName"
        app:layout_constraintStart_toEndOf="@+id/itemIDTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        android:textStyle="normal"
        android:textColor="@color/secondaryColor"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/itemScoreTitle"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.25"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/itemIDTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/score"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAppearance="@color/design_default_color_primary"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/itemScore"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.75"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="7dp"
        app:layout_constraintTop_toBottomOf="@+id/itemID"
        app:layout_constraintStart_toEndOf="@+id/itemScoreTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        android:textStyle="normal"
        android:textColor="@color/secondaryColor"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/itemHtmlUrlTitle"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.20"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/itemScoreTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/url"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAppearance="@color/design_default_color_primary"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/itemHtmlUrl"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.80"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/itemScore"
        app:layout_constraintStart_toEndOf="@+id/itemHtmlUrlTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="23sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="normal"
        android:gravity="center_vertical"
        android:autoLink="web"
        android:textColorLink="@color/secondaryColor"
        />
    <TextView
        android:id="@+id/repoOwner"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/itemHtmlUrl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textColorLink="@color/secondaryColor"
        />

</androidx.constraintlayout.widget.ConstraintLayout>